<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="411dp"
        android:layout_height="735dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="214dp"
                android:layout_height="99dp"
                android:layout_margin="16dp" />

            <TextView
                android:id="@+id/sourceText"
                android:layout_width="258dp"
                android:layout_height="34dp" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="409dp"
                android:layout_height="160dp"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/textPaneArtistDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:padding="16dp" />
            </ScrollView>

            <Button
                android:id="@+id/openUrlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="View Full Article" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="214dp"
                android:layout_height="99dp"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="120dp" />

            <TextView
                android:id="@+id/sourceText2"
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPaneArtistDescription2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/openUrlButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="View Full Article" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_margin="16dp" />

            <TextView
                android:id="@+id/sourceText3"
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textPaneArtistDescription3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/openUrlButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="View Full Article" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>